{
  "name": "github-project-todo-md",
  "version": "1.0.1",
  "description": "A Tool that sync between GitHub Project Board <-> Todo Markdown text.",
  "keywords": [
    "markdown",
    "github",
    "project",
    "todo",
    "board",
    "sync"
  ],
  "homepage": "https://github.com/azu/github-project-todo-md",
  "bugs": {
    "url": "https://github.com/azu/github-project-todo-md/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/github-project-todo-md.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "main": "lib/github-project-todo-md.js",
  "module": "module/github-project-todo-md.js",
  "types": "lib/github-project-todo-md.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module"
  ],
  "scripts": {
    "build": "tsc -p . && tsc -p ./tsconfig.module.json",
    "clean": "rimraf lib/ module/",
    "prepare": "git config --local core.hooksPath .githook",
    "prepublishOnly": "npm run clean && npm run build",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@octokit/graphql-schema": "^10.11.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.14",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "ts-node-test-register": "^9.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@deps/debug": "^1.1.0",
    "@octokit/graphql": "^4.5.8",
    "markdown-builder": "^0.9.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "unified": "^9.2.0",
    "unist-util-select": "^3.0.4",
    "unist-util-visit-parents": "^3.1.1"
  }
}
